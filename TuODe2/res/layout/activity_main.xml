<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/suchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Suchen" />

    <Button
        android:id="@+id/stellen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/suchen"
        android:layout_alignLeft="@+id/suchen"
        android:layout_marginBottom="44dp"
        android:layout_toLeftOf="@+id/linearLayout1"
        android:text="Frage stellen" 
        android:onClick="aufruf"/>

    <Button
        android:id="@+id/offen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stellen"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/suchen"
        android:text="offene Fragen" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stellen"
        android:layout_alignLeft="@+id/stellen"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/offen"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/alert_dark_frame" />

    <TextView
        android:id="@+id/ausgabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:text="TextView" />

</RelativeLayout>